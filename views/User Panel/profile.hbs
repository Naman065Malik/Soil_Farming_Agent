            const element = document.querySelector(".account_detail")
            element.classList.toggle("non-visible");
            console.log(elements)
            elements.forEach(element =>{
                element.classList.toggle("non-visible");
            })

            console.log("Triigerred edit_profile")
        }

    </script>

</html>